<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        All News
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <th>Title</th>
                    <th>Sub title</th>
                    <th>Photo</th>
                    <th>Actions</th>
                </thead>

                <tfoot>
                    <th>Title</th>
                    <th>Sub title</th>
                    <th>Photo</th>
                    <th>Actions</th>
                </tfoot>

                <tbody>
                    <% for (var news of newsList) { %>
                        <tr>
                            <td><%= news.title %></td>
                            <td><%= news.sub_title %></td>
                            <td>
                                <img src="<%= news.news_photo %>" height="80" width="80" />
                            </td>
                            <td>
                                <a href="/news/edit/<%= news.id %>" class="btn btn-outline-primary btn-sm">Edit</a> |
                                <a href="/news/delete/<%= news.id %>" class="btn btn-outline-danger btn-sm" 
                                   onclick="return checkDelete()">Delete</a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    function checkDelete() {
        return confirm('Are you sure you want to Delete this?');
    }
</script>
